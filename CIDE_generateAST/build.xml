<?xml version="1.0"?>

<project basedir=".">
	<taskdef name="astgen" classname="cide.astgen.ant.AstgenTask" classpath="./bin"/>
	<taskdef name="jcc" classname="cide.astgen.ant.JavaCCTask" classpath="./bin" />

	<target name="alllanguages" depends="antlr,bali,c,capprox,cs,ecmascript,fj,gcide,haskell,phaskell,java15,javacc,properties,simple,html,xml,r"/>

